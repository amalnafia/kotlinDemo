<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/noInternetDialogFragment"
        android:name="com.example.kotlinStructure.ui.noInternet.NoInternetDialogFragment"
        android:label="fragment_no_internet"
        tools:layout="@layout/fragment_no_internet" />
    <action
        android:id="@+id/action_global_noInternetDialogFragment"
        app:destination="@id/noInternetDialogFragment" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.kotlinStructure.ui.splash.SplashFragment"
        tools:layout="@layout/splash_fragment">
        <action
            android:id="@+id/action_splashFragment_to_settingFragment"
            app:destination="@id/settingFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="AppName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.example.kotlinStructure.ui.setting.SettingFragment"
        tools:layout="@layout/setting_fragment">

        <action
            android:id="@+id/action_settingFragment_to_loginFragment"
            app:destination="@id/login_fragment"
            app:popUpTo="@id/login_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/login_fragment"
        android:name="com.example.kotlinStructure.ui.login.LoginFragment"
        tools:layout="@layout/fragment_login" />
</navigation>